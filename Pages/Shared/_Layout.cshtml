                </div>
            </div>
            <!-- Image Section end-->
            <!-- Form Section Start-->
            <div class="col-5">
                <div class="form-section shadow rounded py-4 px-5">
                        <div class="field-section">
                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade show active" id="pills-signin" role="tabpanel" aria-labelledby="pills-signin-tab">
                                    <div class="signin-section row">
                                        <div class="col-12">
                                            <h4 class="primary-color text-center ">Make Appointment</h4>
                                        </div>
                                        <div class="col-12">
                                            <input type="text" class="form-control mb-0 mt-5" id="Username" aria-describedby="text" required placeholder=" Your Name">
                                        </div>
                                        <div class="col-12">
                                            <select class="form-control mb-0 mt-5" >
                                                <option>Select Department</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5</option>
                                            </select>
                                        </div>
                                        <div class="col-12">
                                            <select class="form-control mb-0 mt-5" >
                                                <option>Select Doctor</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5</option>
                                            </select>
                                        </div>
                                        <div class="col-12">
                                            <input placeholder=" Select Tour Date" class="form-control mb-0 mt-5" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" id="date" />
                                        </div>
                                        <div class="col-12 d-flex justify-content-center">
                                            <button type="submit" class="btn btn-primary my-5">Check Available Doctors</button>
                                        </div>

                                    </div>
                                </div>
                                <div class="tab-pane fade" id="pills-signup" role="tabpanel" aria-labelledby="pills-signup-tab">
                                    <partial name="_CookieConsentPartial" optional />
                                    <main role="main" class="pb-3">
                                        @RenderBody()
                                    </main>
