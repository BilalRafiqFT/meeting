@page
@model LoginModel

<section>
    <form id="account" method="post">
        <div class="signin-section">
            <div class="col-12">
                <h4 class="primary-color text-center">Sign In</h4>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-12">
                <label class="mb-0 mt-5" asp-for="Input.Email">Username</label>
                <input type="text" class="form-control " asp-for="Input.Email" aria-describedby="text">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label class="mb-0 mt-5" asp-for="Input.Password">Password</label>
                <input type="password" class="form-control " asp-for="Input.Password" aria-describedby="password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-12">
                <input type="checkbox" class="option-input checkbox mb-0 mt-5" asp-for="Input.RememberMe" />
                <label for="" class="checkbox-text">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>

            </div>
            <div class="col-12 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary my-5">Log in</button>
            </div>
            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
                <p>
                    <button type="submit" asp-page-handler="SendVerificationEmail" class="btn-link" style="padding:0px;margin:0px;border:0px">Resend email confirmation</button>
                </p>
            </div>

        </div>
